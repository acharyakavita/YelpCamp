<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new"
          >Add new campground</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center" style='display:flex;flex-wrap:wrap;'>
    <%campground.forEach(function(camp){%>
    <div class="col-md-3 col-xs-12">
      <div class="thumbnail">
        <img src="<%=camp.image %>" alt="camping" />
        <div class="caption"><h3><%=camp.name%></h3></div>
        <p>
          <a href='/campgrounds/<%=camp._id%>' class='btn btn-primary'>More info</a>
        </p>
      </div>
    </div>
    <%})%>
  </div>
</div>

<% include partials/footer %>
